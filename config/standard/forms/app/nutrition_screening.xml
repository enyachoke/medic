<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Nutrition screening</h:title>
    <model>
      <instance>
        <nutrition_screening delimiter="#" id="nutrition_screening" prefix="J1!nutrition_screening!" version="2019-03-11 16-49">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <contact>
              <_id/>
              <name/>
              <patient_id/>
              <date_of_birth/>
            </contact>
          </inputs>
          <child_name/>
          <patient_id/>
          <dob/>
          <age_in_days/>
          <measurements>
            <gender/>
            <weight/>
            <height/>
            <muac/>
            <wfa/>
            <hfa/>
            <wfh/>
            <nn1/>
            <nn2/>
            <nn3/>
            <wfa_message/>
            <hfa_message/>
            <wfh_message/>
            <zscore_wfa_note/>
            <zscore_hfa_note/>
            <zscore_wfh_note/>
          </measurements>
          <treatment>
            <n_1/>
            <n_2/>
            <n_3/>
            <n_4/>
            <enroll/>
            <reason/>
            <admission_type/>
            <admission_criteria/>
            <program/>
            <n_5/>
            <n_6/>
            <n_7/>
            <n_8/>
            <facility/>
            <target_weight/>
            <target_muac/>
            <additional_notes/>
          </treatment>
          <summary>
            <n_9/>
            <n_10/>
            <n_11/>
            <n_12/>
            <n_13/>
            <n_14/>
            <n_15/>
            <n_16/>
            <n_17/>
            <n_18/>
            <n_19/>
            <n_20/>
            <n_21/>
            <n_22/>
            <n_23/>
            <n_24/>
            <n_25/>
            <n_26/>
            <n_27/>
            <n_28/>
            <n_29/>
            <n_30/>
            <n_31/>
            <n_32/>
            <n_33/>
            <n_34/>
          </summary>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </nutrition_screening>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/nutrition_screening/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/nutrition_screening/inputs/source" type="string"/>
      <bind nodeset="/nutrition_screening/inputs/source_id" type="string"/>
      <bind nodeset="/nutrition_screening/inputs/contact/_id" type="db:person"/>
      <bind nodeset="/nutrition_screening/inputs/contact/name" type="string"/>
      <bind nodeset="/nutrition_screening/inputs/contact/patient_id" type="string"/>
      <bind nodeset="/nutrition_screening/inputs/contact/date_of_birth" type="string"/>
      <bind calculate="../inputs/contact/name" nodeset="/nutrition_screening/child_name" type="string"/>
      <bind calculate="../inputs/contact/patient_id" nodeset="/nutrition_screening/patient_id" type="string"/>
      <bind calculate="substr(../inputs/contact/date_of_birth, 0, 10)" nodeset="/nutrition_screening/dob" type="string"/>
      <bind calculate="int(decimal-date-time(today()) - decimal-date-time(date( /nutrition_screening/dob )))" nodeset="/nutrition_screening/age_in_days" type="string"/>
      <bind nodeset="/nutrition_screening/measurements/gender" required="true()" type="select1"/>
      <bind constraint=". &gt;= 0.8 and . &lt;= 68.5" jr:constraintMsg="Weight should be between 0.8 kg and 68.5 kg" nodeset="/nutrition_screening/measurements/weight" required="true()" type="decimal"/>
      <bind constraint=". &gt;= 45 and . &lt;= 120" jr:constraintMsg="Height should be between 45 cm and 120 cm" nodeset="/nutrition_screening/measurements/height" required="true()" type="decimal"/>
      <bind constraint=". &gt;= 5 and . &lt;= 30" jr:constraintMsg="MUAC should be between 5 and 30 cm" nodeset="/nutrition_screening/measurements/muac" relevant=" /nutrition_screening/age_in_days  &gt;= 180" required="false()" type="decimal"/>
      <bind calculate="round(z-score('weight-for-age',  /nutrition_screening/measurements/gender ,  /nutrition_screening/age_in_days ,  /nutrition_screening/measurements/weight ), 1)" nodeset="/nutrition_screening/measurements/wfa" type="string"/>
      <bind calculate="round(z-score('height-for-age',  /nutrition_screening/measurements/gender ,  /nutrition_screening/age_in_days ,  /nutrition_screening/measurements/height ), 1)" nodeset="/nutrition_screening/measurements/hfa" type="string"/>
      <bind calculate="round(z-score('weight-for-height',  /nutrition_screening/measurements/gender ,  /nutrition_screening/measurements/height ,  /nutrition_screening/measurements/weight ), 1)" nodeset="/nutrition_screening/measurements/wfh" type="string"/>
      <bind nodeset="/nutrition_screening/measurements/nn1" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/measurements/nn2" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/measurements/nn3" readonly="true()" type="string"/>
      <bind calculate="if( /nutrition_screening/measurements/wfa  = &quot;&quot;, &quot;&quot;, if( ( /nutrition_screening/measurements/wfa  &lt; -3), &quot;&lt; -3SD [Severely Malnourished]&quot;, if( ( /nutrition_screening/measurements/wfa  &lt; -2 and  /nutrition_screening/measurements/wfa  &gt;= -3), &quot;-3SD to &lt; -2SD [Moderately Malnourished]&quot;, if( ( /nutrition_screening/measurements/wfa  &lt;= 2 and  /nutrition_screening/measurements/wfa  &gt;= -2), &quot;-2SD to 2SD [Normal]&quot;, if( ( /nutrition_screening/measurements/wfa  &gt; 2 and  /nutrition_screening/measurements/wfa  &lt;= 3), &quot;&gt;2SD [Overweight]&quot;, if( ( /nutrition_screening/measurements/wfa  &gt; 3 ), &quot;&gt;3SD [Obese]&quot;, &quot;&quot; ) ) ) ) ) )" nodeset="/nutrition_screening/measurements/wfa_message" type="string"/>
      <bind calculate="if( /nutrition_screening/measurements/hfa  = &quot;&quot;, &quot;&quot;, if( ( /nutrition_screening/measurements/hfa  &lt; -3), &quot;&lt; -3SD [Severely Stunted]&quot;, if( ( /nutrition_screening/measurements/hfa  &lt; -2 and  /nutrition_screening/measurements/hfa  &gt;= -3), &quot;-3SD to &lt;-2SD [Moderately Stunted]&quot;, if( ( /nutrition_screening/measurements/hfa  &lt;= 2 and  /nutrition_screening/measurements/hfa  &gt;= -2), &quot;-2SD to 2SD [Normal]&quot;, if( ( /nutrition_screening/measurements/hfa  &gt; 2), &quot;&gt;2SD [High]&quot;, &quot;&quot; ) ) ) ) )" nodeset="/nutrition_screening/measurements/hfa_message" type="string"/>
      <bind calculate="if( /nutrition_screening/measurements/wfh  = &quot;&quot;, &quot;&quot;, if( ( /nutrition_screening/measurements/wfh  &lt; -3), &quot;&lt; -3SD [Severely Wasted]&quot;, if( ( /nutrition_screening/measurements/wfh  &lt; -2 and  /nutrition_screening/measurements/wfh  &gt;= -3), &quot;-3SD to &lt;-2SD [Moderately Wasted]&quot;, if( ( /nutrition_screening/measurements/wfh  &lt;= 2 and  /nutrition_screening/measurements/wfh  &gt;= -2), &quot;-2SD to 2SD [Normal]&quot;, if( ( /nutrition_screening/measurements/wfh  &gt; 2), &quot;&gt;2SD [Overweight]&quot;, &quot;&quot; ) ) ) ))" nodeset="/nutrition_screening/measurements/wfh_message" type="string"/>
      <bind nodeset="/nutrition_screening/measurements/zscore_wfa_note" readonly="true()" relevant=" /nutrition_screening/measurements/wfa  != ''" type="string"/>
      <bind nodeset="/nutrition_screening/measurements/zscore_hfa_note" readonly="true()" relevant=" /nutrition_screening/measurements/hfa  != ''" type="string"/>
      <bind nodeset="/nutrition_screening/measurements/zscore_wfh_note" readonly="true()" relevant=" /nutrition_screening/measurements/wfh  != ''" type="string"/>
      <bind nodeset="/nutrition_screening/treatment/n_1" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/treatment/n_2" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/treatment/n_3" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/treatment/n_4" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/treatment/enroll" required="true()" type="select1"/>
      <bind nodeset="/nutrition_screening/treatment/reason" relevant=" /nutrition_screening/treatment/enroll  = 'no'" required="true()" type="select1"/>
      <bind nodeset="/nutrition_screening/treatment/admission_type" relevant=" /nutrition_screening/treatment/enroll  = 'yes'" required="true()" type="select1"/>
      <bind nodeset="/nutrition_screening/treatment/admission_criteria" relevant=" /nutrition_screening/treatment/enroll  = 'yes'" required="true()" type="select"/>
      <bind nodeset="/nutrition_screening/treatment/program" relevant=" /nutrition_screening/treatment/enroll  = 'yes'" required="true()" type="select1"/>
      <bind nodeset="/nutrition_screening/treatment/n_5" readonly="true()" relevant=" /nutrition_screening/treatment/program  != ''" type="string"/>
      <bind nodeset="/nutrition_screening/treatment/n_6" readonly="true()" relevant=" /nutrition_screening/treatment/program  = 'OTP'" type="string"/>
      <bind nodeset="/nutrition_screening/treatment/n_7" readonly="true()" relevant=" /nutrition_screening/treatment/program  = 'SFP'" type="string"/>
      <bind nodeset="/nutrition_screening/treatment/n_8" readonly="true()" relevant=" /nutrition_screening/treatment/program  = 'SC'" type="string"/>
      <bind nodeset="/nutrition_screening/treatment/facility" relevant=" /nutrition_screening/treatment/enroll  = 'yes'" required="true()" type="select1"/>
      <bind constraint=". &gt;= 0.8 and . &lt;= 68.5" jr:constraintMsg="Weight should be between 0.8 kg and 68.5 kg" nodeset="/nutrition_screening/treatment/target_weight" relevant=" /nutrition_screening/treatment/enroll  = 'yes'" type="decimal"/>
      <bind constraint=". &gt;= 5 and . &lt;= 30" jr:constraintMsg="MUAC should be between 5 and 30 cm" nodeset="/nutrition_screening/treatment/target_muac" relevant=" /nutrition_screening/treatment/enroll  = 'yes'" type="decimal"/>
      <bind nodeset="/nutrition_screening/treatment/additional_notes" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_9" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_10" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_11" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_12" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_13" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_14" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_15" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_16" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_17" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_18" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_19" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_20" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_21" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_22" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_23" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_24" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_25" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_26" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_27" readonly="true()" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_28" readonly="true()" relevant=" /nutrition_screening/treatment/enroll  = 'yes'" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_29" readonly="true()" relevant=" /nutrition_screening/treatment/enroll  = 'yes' and  /nutrition_screening/treatment/facility  = 'clinic'" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_30" readonly="true()" relevant=" /nutrition_screening/treatment/target_weight  != ''" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_31" readonly="true()" relevant=" /nutrition_screening/treatment/target_muac  != ''" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_32" readonly="true()" relevant=" /nutrition_screening/treatment/enroll  = 'no'" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_33" readonly="true()" relevant=" /nutrition_screening/treatment/additional_notes  != ''" type="string"/>
      <bind nodeset="/nutrition_screening/summary/n_34" readonly="true()" relevant=" /nutrition_screening/treatment/additional_notes  != ''" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/nutrition_screening/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/nutrition_screening/inputs">
      <label>Patient</label>
      <input appearance="hidden" ref="/nutrition_screening/inputs/source">
        <label>Source</label>
      </input>
      <input appearance="hidden" ref="/nutrition_screening/inputs/source_id">
        <label>Source ID</label>
      </input>
      <group ref="/nutrition_screening/inputs/contact">
        <label>Contact</label>
        <input appearance="db-object" ref="/nutrition_screening/inputs/contact/_id">
          <label>What is the child's name?</label>
          <hint>Select a person from list</hint>
        </input>
        <input appearance="hidden" ref="/nutrition_screening/inputs/contact/name">
          <label>Child Name</label>
        </input>
        <input appearance="hidden" ref="/nutrition_screening/inputs/contact/patient_id">
          <label>Child ID</label>
        </input>
        <input appearance="hidden" ref="/nutrition_screening/inputs/contact/date_of_birth">
          <label>Date of Birth</label>
        </input>
      </group>
    </group>
    <group appearance="field-list" ref="/nutrition_screening/measurements">
      <label>Measurements</label>
      <select1 ref="/nutrition_screening/measurements/gender">
        <label>Gender</label>
        <item>
          <label>Male</label>
          <value>male</value>
        </item>
        <item>
          <label>Female</label>
          <value>female</value>
        </item>
      </select1>
      <input ref="/nutrition_screening/measurements/weight">
        <label>Weight (kgs)</label>
      </input>
      <input ref="/nutrition_screening/measurements/height">
        <label>Height (cms)</label>
      </input>
      <input ref="/nutrition_screening/measurements/muac">
        <label>MUAC Measurement</label>
      </input>
      <input appearance="hidden" ref="/nutrition_screening/measurements/nn1">
        <label>WFA: <output value=" /nutrition_screening/measurements/wfa "/></label>
      </input>
      <input appearance="hidden" ref="/nutrition_screening/measurements/nn2">
        <label>HFA: <output value=" /nutrition_screening/measurements/hfa "/></label>
      </input>
      <input appearance="hidden" ref="/nutrition_screening/measurements/nn3">
        <label>WFH: <output value=" /nutrition_screening/measurements/wfh "/></label>
      </input>
      <input appearance="hidden" ref="/nutrition_screening/measurements/zscore_wfa_note">
        <label>weight for age: <output value=" /nutrition_screening/measurements/wfa_message "/></label>
      </input>
      <input appearance="hidden" ref="/nutrition_screening/measurements/zscore_hfa_note">
        <label>height for age: <output value=" /nutrition_screening/measurements/hfa_message "/></label>
      </input>
      <input appearance="hidden" ref="/nutrition_screening/measurements/zscore_wfh_note">
        <label>weight for height: <output value=" /nutrition_screening/measurements/wfh_message "/></label>
      </input>
    </group>
    <group appearance="field-list" ref="/nutrition_screening/treatment">
      <label>Treatment</label>
      <input ref="/nutrition_screening/treatment/n_1">
        <label>z-score measurements</label>
      </input>
      <input ref="/nutrition_screening/treatment/n_2">
        <label>weight for age: <output value=" /nutrition_screening/measurements/wfa "/></label>
      </input>
      <input ref="/nutrition_screening/treatment/n_3">
        <label>height for age: <output value=" /nutrition_screening/measurements/hfa "/></label>
      </input>
      <input ref="/nutrition_screening/treatment/n_4">
        <label>weight for height: <output value=" /nutrition_screening/measurements/wfh "/></label>
      </input>
      <select1 ref="/nutrition_screening/treatment/enroll">
        <label>Do you want to enroll(child name) into a treatment program?</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </select1>
      <select1 ref="/nutrition_screening/treatment/reason">
        <label>Reasons for non-enrollment</label>
        <item>
          <label>False positive</label>
          <value>false_positive</value>
        </item>
        <item>
          <label>Chronic malnutrition</label>
          <value>chronic_malnutrition</value>
        </item>
      </select1>
      <select1 ref="/nutrition_screening/treatment/admission_type">
        <label>Type of admission</label>
        <item>
          <label>New case</label>
          <value>new_case</value>
        </item>
        <item>
          <label>Relapse/Readmission</label>
          <value>relapse</value>
        </item>
        <item>
          <label>Transfer from Outpatient Therapeutic Programme</label>
          <value>otp</value>
        </item>
        <item>
          <label>Transfer from Supplementary Feeding Programme</label>
          <value>sfp</value>
        </item>
        <item>
          <label>Transfer from Stabilization Center</label>
          <value>sc</value>
        </item>
        <item>
          <label>Returned defaulter</label>
          <value>defaulter</value>
        </item>
      </select1>
      <select ref="/nutrition_screening/treatment/admission_criteria">
        <label>Admission criteria</label>
        <item>
          <label>+ or ++ oedema</label>
          <value>oedema_1_2</value>
        </item>
        <item>
          <label>+++ oedema</label>
          <value>oedema_3</value>
        </item>
        <item>
          <label>MUAC &lt; 11.5 cm</label>
          <value>muac_115</value>
        </item>
        <item>
          <label>MUAC &lt; 11.5 cm with complications</label>
          <value>muac_115_complications</value>
        </item>
        <item>
          <label>MUAC to 11.5 cm to 12.4 cm</label>
          <value>muac_115_124</value>
        </item>
        <item>
          <label>Weight for Height Z score &lt; -3</label>
          <value>wfh_-3</value>
        </item>
        <item>
          <label>Weight for Height Z score &lt; -3 with complications</label>
          <value>wfh_-3_complications</value>
        </item>
        <item>
          <label>Weight for Height Z score ≥ -3 to &lt; -2</label>
          <value>wfh_-3_-2</value>
        </item>
      </select>
      <select1 ref="/nutrition_screening/treatment/program">
        <label>Admission treatment program</label>
        <item>
          <label>Outpatient Therapeutic Program (OTP)</label>
          <value>OTP</value>
        </item>
        <item>
          <label>Supplementary Feeding Program (SFP)</label>
          <value>SFP</value>
        </item>
        <item>
          <label>Stabilization Center (SC)</label>
          <value>SC</value>
        </item>
        <item>
          <label>Others</label>
          <value>other</value>
        </item>
      </select1>
      <input ref="/nutrition_screening/treatment/n_5">
        <label>Note admission criteria:</label>
      </input>
      <input appearance="blue" ref="/nutrition_screening/treatment/n_6">
        <label>OTP admission criteria should be '+ or ++Oedema' or 'MUAC &lt; 11.5cm' or 'Weight for Height Z score &lt;-3'</label>
      </input>
      <input appearance="blue" ref="/nutrition_screening/treatment/n_7">
        <label>SFP admission criteria should be 'MUAC between 11.5 to 12.4cm' or 'Weight for Height Z score ≥ -3 to &lt; -2'</label>
      </input>
      <input appearance="blue" ref="/nutrition_screening/treatment/n_8">
        <label>SC admission criteria should be '+++ Oedema' or 'MUAC &lt; 11.5cm with complications' or 'Weight for Height Z score &lt;-3 with complications'</label>
      </input>
      <select1 ref="/nutrition_screening/treatment/facility">
        <label>Facility of admission</label>
        <item>
          <label>At your clinic</label>
          <value>clinic</value>
        </item>
        <item>
          <label>Referral to another clinic</label>
          <value>other_clinic</value>
        </item>
      </select1>
      <input ref="/nutrition_screening/treatment/target_weight">
        <label>Target Weight (kg)</label>
      </input>
      <input ref="/nutrition_screening/treatment/target_muac">
        <label>Target MUAC (cm)</label>
      </input>
      <input ref="/nutrition_screening/treatment/additional_notes">
        <label>Additional notes</label>
      </input>
    </group>
    <group appearance="field-list summary" ref="/nutrition_screening/summary">
      <label>Click on submit to finalize this report</label>
      <input appearance="h1 yellow" ref="/nutrition_screening/summary/n_9">
        <label>Patient Details&lt;i class="fa fa-user"&gt;&lt;/i&gt;</label>
      </input>
      <input ref="/nutrition_screening/summary/n_10">
        <label>&lt;h4&gt;<output value=" /nutrition_screening/child_name "/>&lt;/h4&gt;</label>
      </input>
      <input ref="/nutrition_screening/summary/n_11">
        <label>Date of birth: <output value=" /nutrition_screening/dob "/> (<output value=" /nutrition_screening/age_in_days "/> days old)</label>
      </input>
      <input ref="/nutrition_screening/summary/n_12">
        <label>Gender: <output value=" /nutrition_screening/measurements/gender "/></label>
      </input>
      <input appearance="h1 yellow" ref="/nutrition_screening/summary/n_13">
        <label>Measurements&lt;i class="fa fa-stethoscope"&gt;&lt;/i&gt;</label>
      </input>
      <input ref="/nutrition_screening/summary/n_14">
        <label>Weight: <output value=" /nutrition_screening/measurements/weight "/> kg</label>
      </input>
      <input ref="/nutrition_screening/summary/n_15">
        <label>Height: <output value=" /nutrition_screening/measurements/height "/> cm</label>
      </input>
      <input ref="/nutrition_screening/summary/n_16">
        <label>MUAC: <output value=" /nutrition_screening/measurements/muac "/> cm</label>
      </input>
      <input appearance="h2 blue" ref="/nutrition_screening/summary/n_17">
        <label>Weight for age</label>
      </input>
      <input ref="/nutrition_screening/summary/n_18">
        <label>z-score: <output value=" /nutrition_screening/measurements/wfa "/></label>
      </input>
      <input ref="/nutrition_screening/summary/n_19">
        <label>interpretation: <output value=" /nutrition_screening/measurements/wfa_message "/></label>
      </input>
      <input appearance="h2 blue" ref="/nutrition_screening/summary/n_20">
        <label>Height for age</label>
      </input>
      <input ref="/nutrition_screening/summary/n_21">
        <label>z-score: <output value=" /nutrition_screening/measurements/hfa "/></label>
      </input>
      <input ref="/nutrition_screening/summary/n_22">
        <label>interpretation: <output value=" /nutrition_screening/measurements/hfa_message "/></label>
      </input>
      <input appearance="h2 blue" ref="/nutrition_screening/summary/n_23">
        <label>Weight for height</label>
      </input>
      <input ref="/nutrition_screening/summary/n_24">
        <label>z-score: <output value=" /nutrition_screening/measurements/wfh "/></label>
      </input>
      <input ref="/nutrition_screening/summary/n_25">
        <label>interpretation: <output value=" /nutrition_screening/measurements/wfh_message "/></label>
      </input>
      <input appearance="h1 yellow" ref="/nutrition_screening/summary/n_26">
        <label>Treatment enrollment</label>
      </input>
      <input ref="/nutrition_screening/summary/n_27">
        <label>Enrolled into a treatment program: <output value=" /nutrition_screening/treatment/enroll "/></label>
      </input>
      <input ref="/nutrition_screening/summary/n_28">
        <label>Facility of admission: <output value=" /nutrition_screening/treatment/facility "/></label>
